        function expandCollapse(clickEvent) {
          var heading = clickEvent.target;
          var item = heading.parentNode;
          collapsed = ! item.classList.toggle('expanded');
          item.classList.toggle('collapsed', collapsed);
        }

        var items = document.querySelectorAll('.documentation__nav>ul>li');

        var currentPath = location.pathname.replace(/(^\/|\/$)/g, "") + location.hash;

        // Expand first item if we're on landing page
        if (currentPath == 'docs/' || currentPath == 'docs') {
          items[0].classList.add('expanded');
        }

        for(var num = 0; num < items.length; num++) {
          var item = items[num];
          var heading = item.querySelector('h4');

          if (! heading) {continue;}

          var section = 'docs/' + heading.innerText.toLowerCase().substring(0,4)

          // For lists with child lists, add expand/collapse functionality
          if (item.querySelector('ul')) {
            if (currentPath.startsWith(section)) {
                item.classList.add('expanded');
            } else {
                item.classList.add('collapsed');
            }

            heading = item.querySelector('h4');

            if (heading && heading.parentNode == item) {
              heading.addEventListener('click', expandCollapse);
            }
          }

          var links = item.querySelectorAll('[href]');

          for(var linkNum = 0; linkNum < links.length; linkNum++) {
            link = links[linkNum];

            // Get paths, removing leading and trailing slashes for consistency
            linkPath = link.pathname.replace(/(^\/|\/$)/g, "") + link.hash;

            // Make current navigation item appear active
            // @TODO: Replace this with a static JS-less solution
            //        once we have a more intelligent
            //        docs navigation mechanism.
            if (linkPath == currentPath) {
                link.classList.add('active');
            }
          }
        }
