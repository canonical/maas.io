            <li><a class="external" href="http://maas.ubuntu.com/docs1.5/">1.5</a></li>
          </ul>
        </section>

        <ul>
          {% for item in navigation %}
          <li>
            {% if item.location %}
            <a href="{{ item.location | replace('.html', '') }}">{{ item.title }}</a>
            {% else %}
            <h4 class="header toggle-target">{{ item.title }}</h4>
            {% endif %}

            {% if item.children %}
            <ul>
              {% for child in item.children %}
              <li class"section">
                {% if child.location %}
                <a class"header" href="{{ child.location | replace('.html', '') }}">{{ child.title }}</a>
                {% else %}
                {{ child.title }}
                {% endif %}

                {% if child.children %}
                <ul>
                  {% for grandchild in child.children %}
                  <li><a href="{{ grandchild.location | replace('.html', '') }}">{{ grandchild.title }}</a></li>
                  {% endfor %}
                </ul>
                {% endif %}
              </li>
              {% endfor %}
            </ul>
            {% endif %}
          </li>
          {% endfor %}
        </ul>
      </nav>

